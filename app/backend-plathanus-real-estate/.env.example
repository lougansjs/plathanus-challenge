# ============================================
# Configuração do Banco de Dados PostgreSQL
# ============================================
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=plathanus_real_estate_development

# ============================================
# Configuração do Rails
# ============================================
# Número de threads do Rails (usado no pool de conexões do banco e no Puma)
RAILS_MAX_THREADS=5

# Porta do servidor Puma
PORT=3001

# Nível de log (debug, info, warn, error, fatal)
RAILS_LOG_LEVEL=info

# ============================================
# Configuração do Active Storage
# ============================================
# Opções: 'local' (disco local) ou 'minio' (MinIO/S3)
ACTIVE_STORAGE_SERVICE=minio

# ============================================
# Configuração do MinIO (S3-compatible)
# ============================================
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_BUCKET=plathanus-real-estate-development
MINIO_ENDPOINT=http://localhost:9000

# ============================================
# Configuração do Solid Queue (Background Jobs)
# ============================================
# Número de processos de workers para jobs em background
JOB_CONCURRENCY=1

# ============================================
# Configurações Opcionais
# ============================================
# Executar Solid Queue dentro do Puma (true/false)
# SOLID_QUEUE_IN_PUMA=

# Caminho para o arquivo PID do Puma
# PIDFILE=

# ============================================
# Configuração de Produção (não usar em desenvolvimento)
# ============================================
# PLATHANUS_REAL_ESTATE_DATABASE_PASSWORD=

# ============================================
# Configuração de Autenticação JWT
# ============================================
# Chave secreta para assinar tokens JWT
# IMPORTANTE: Use uma chave segura e única em produção!
# Gere uma nova chave com: ruby -e "require 'securerandom'; puts SecureRandom.hex(64)"
JWT_SECRET_KEY=
